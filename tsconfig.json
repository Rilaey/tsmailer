{
    "compilerOptions": {
      "baseUrl": ".",
      "paths": {
        "@packages/*": ["packages/*"],
        "@models/*": ["packages/models/src/*"],
        "@types/*": ["packages/types/src/*"]
      },
      "composite": true,
      "declaration": true,
      "declarationMap": true,
      "skipLibCheck": true,
      "outDir": "dist",
      "rootDir": ".",
      "module": "NodeNext",
      "target": "es6",
      "moduleResolution": "NodeNext"
    },
    "references": [
      { "path": "./packages/models" },
      { "path": "./packages/types" }
    ],
    "include": ["packages/**/*", "apps/**/*"]
  }
  