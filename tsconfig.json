      "baseUrl": ".",
      "paths": {
        "@packages/*": ["packages/*"]
      },
      "composite": true,
      "declaration": true,
      "declarationMap": true,
      "skipLibCheck": true,
      "outDir": "dist",
      "rootDir": ".",
      "module": "NodeNext",
      "target": "es6",
      "moduleResolution": "NodeNext"
    },
    "include": ["packages/**/*", "apps/**/*"]
  }
  